{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "esNext",
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "target": "es2018",
    "moduleResolution": "node",
    "declaration": true,
    "baseUrl": "." // This must be specified if "paths" is.
  },
  "exclude": [
    "node_modules",
    "dist",
    "src/test",
    "src/examples/",
    "bundle"
  ]
}
